generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model admin_metrics {
  id                    String    @id @db.Char(36)
  active_users_count    Int?      @default(0)
  properties_count      Int?      @default(0)
  sold_properties_count Int?      @default(0)
  created_at            DateTime? @default(now()) @db.DateTime(0)
  updated_at            DateTime? @default(now()) @db.DateTime(0)
  user_id               String    @db.Char(36)
  active                Boolean?  @default(true)
  user                  user      @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "admin_metrics_ibfk_1")

  @@index([user_id], map: "user_id")
}

model favorite {
  id          String   @id @db.Char(36)
  client_id   String   @db.Char(36)
  property_id String   @db.Char(36)
  active      Boolean? @default(true)
  user        user     @relation(fields: [client_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "favorite_ibfk_1")
  property    property @relation(fields: [property_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "favorite_ibfk_2")

  @@unique([client_id, property_id], map: "client_id")
  @@index([property_id], map: "property_id")
}

model location {
  id           String     @id @db.Char(36)
  address      String?    @db.VarChar(255)
  city         String?    @db.VarChar(100)
  neighborhood String?    @db.VarChar(100)
  latitude     Decimal?   @db.Decimal(10, 7)
  longitude    Decimal?   @db.Decimal(10, 7)
  active       Boolean?   @default(true)
  property     property[]
}

model property {
  id               String                 @id @db.Char(36)
  title            String                 @db.VarChar(150)
  description      String?                @db.Text
  price            Decimal?               @db.Decimal(15, 2)
  area_m2          Decimal?               @db.Decimal(10, 2)
  bedrooms         Int?
  bathrooms        Int?
  active           Boolean?               @default(true)
  id_owner         String                 @db.Char(36)
  property_type_id String                 @db.Char(36)
  location_id      String                 @db.Char(36)
  type_of_sale     property_type_of_sale?
  favorite         favorite[]
  user             user                   @relation(fields: [id_owner], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "property_ibfk_1")
  property_type    property_type          @relation(fields: [property_type_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "property_ibfk_2")
  location         location               @relation(fields: [location_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "property_ibfk_3")
  property_photo   property_photo[]

  @@index([id_owner], map: "id_owner")
  @@index([location_id], map: "location_id")
  @@index([property_type_id], map: "property_type_id")
}

model property_photo {
  id          String   @id @db.Char(36)
  property_id String   @db.Char(36)
  url         String   @db.VarChar(500)
  number      Int?
  active      Boolean? @default(true)
  property    property @relation(fields: [property_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "property_photo_ibfk_1")

  @@index([property_id], map: "property_id")
}

model property_type {
  id       String     @id @db.Char(36)
  type     String     @db.VarChar(100)
  active   Boolean?   @default(true)
  property property[]
}

model role {
  id     String   @id @db.Char(36)
  name   String   @unique(map: "name") @db.VarChar(100)
  active Boolean? @default(true)
  user   user[]
}

model user {
  id            String          @id @db.Char(36)
  first_name    String          @db.VarChar(100)
  last_name     String          @db.VarChar(150)
  email         String          @unique(map: "email") @db.VarChar(150)
  password      String          @db.VarChar(255)
  active        Boolean?        @default(true)
  phone         String?         @db.VarChar(20)
  photo         String?         @db.VarChar(500)
  role_id       String?         @db.Char(36)
  admin_metrics admin_metrics[]
  favorite      favorite[]
  property      property[]
  role          role?           @relation(fields: [role_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "user_ibfk_1")

  @@index([role_id], map: "role_id")
}

enum property_type_of_sale {
  sold
  rented
}
